<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Date</th>
      <% if show_actions %>
        <th scope="col">Action</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% events.each do |event| %>
      <tr scope="row">
        <td><%= link_to event.name, event_path(event), style: "text-decoration: none;" %></td>
        <td><%= event.date %></td>
        <% if show_actions %>
          <td>
            <%= link_to 'Edit', edit_event_path(event), class: 'btn btn-primary' %>
            <%= link_to "Delete", event_path(event), data: { turbo_method: :delete }, class: "btn btn-danger" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

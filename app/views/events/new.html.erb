<div class="container">
  <h3 class='pt-4 mb-4'>Add New Event</h3>
  <%= form_with(model: @event, url: events_path, method: :post, local: true) do |form| %>
    <%= render partial: 'layouts/shared/error_messages', locals: { object: @event } %>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :date %>
      <%= form.date_field :date, class: "form-control" %>
    </div>

    <%= form.submit "Create Event", class: "btn btn-primary mt-3" %>
  <% end %>
</div>
